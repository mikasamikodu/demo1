.container{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background: rgb(244,244,244);
    position: fixed;
}
.first{
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: rgba(77, 129, 240, 0.2);
}
.search{
    width: 90%;
    border: 2rpx solid rgb(25, 88, 224);
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 3%;
    background: #FFF;
}
icon{
    margin-right: 20rpx;
}

.second{
    width: 90%;
    display: flex;
    flex-direction: column;
    background: #FFF;
    padding: 0 5%;
}
.content{
    width: 100%;
    height: 120rpx;
    padding: 30rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.doctor,.phone{
    width: 150rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.doctor image{
    width: 120rpx;
    height: 100%;
}
.phone image{
    width: 60rpx;
    height: 50%;
}
.introduce{
    width: 55%;
    height: 80%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.introduce :nth-child(1){
    font-size: 25rpx;
}
.introduce :nth-child(2){
    font-size: 20rpx;
    color: #ddd;
}