.container{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background: rgb(244,244,244);
    position: fixed;
}
.first{
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: rgba(77, 129, 240, 0.2);
}
.search{
    width: 90%;
    border: 2rpx solid rgb(25, 88, 224);
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 3%;
    background: #FFF;
}
icon{
    margin-right: 20rpx;
}

.border{
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    background: #FFF;
    align-items: center;
    padding-left: 5%;
}
.border .image{
    width: 120rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.border .image1 image {
    width: 100rpx;
    height: 90rpx;
}
.border .image2 image {
    width: 90rpx;
    height: 80rpx;
}
.border .image3 image {
    width: 80rpx;
    height: 80rpx;
}
.border :nth-child(2){
    font-size: 45rpx;
    width: 50%;
    height: 100%;
    margin-top: 45rpx;
    margin-left: 20rpx;
}
.border :nth-child(3){
    width: 125rpx;
    height: 65rpx;
    color: #FFF;
    background-color: rgb(77,128,240);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    margin: 0;
    padding: 0;
}